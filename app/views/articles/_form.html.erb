<%= form_for(@article, :html => {:multipart => true}) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <!-- tinymce height and width are set in application.css-->
    <%= f.text_area :body, :class => "tinymce" %>
  </div>
  <!--<div class="field">
    < f.label :published_at %><br>
    < f.datetime_select :published_at %>
  </div>-->

    <div class="field">
      <%= f.label :price %>
      &#36;
      <%= f.text_field :price %>
    </div>

    <br>

    <p>First Image will be shown on main listing page <br>
    To replace an image just select and upload another image</p>
    <div class="field">
      <%= f.label :image1 %>
      <%= f.file_field :image1 %>
      Current Uploaded Image1: <%= image_tag @article.image1.url, :size => "50x50" %>
    </div>

    <div class="field">
      <%= f.label :image2 %>
      <%= f.file_field :image2 %>
      Current Uploaded Image2: <%= image_tag @article.image2.url, :size => "50x50" %>
    </div>

    <div class="field">
      <%= f.label :image3 %>
      <%= f.file_field :image3 %>
      Current Uploaded Image3: <%= image_tag @article.image3.url, :size => "50x50" %>
    </div>

    <div class="field">
      <%= f.label :image4 %>
      <%= f.file_field :image4 %>
      Current Uploaded Image4: <%= image_tag @article.image4.url, :size => "50x50" %>
    </div>

    <div class="field">
      <%= f.label :image5 %>
      <%= f.file_field :image5 %>
      Current Uploaded Image5: <%= image_tag @article.image5.url, :size => "50x50" %>
    </div>

    <% if current_user && (@article.user_id == current_user.id || current_user.admin? ) %>
    <%= check_box_tag :delete_asset1 %> Delete Image1?<br>
    <%= check_box_tag :delete_asset2 %> Delete Image2?<br>
    <%= check_box_tag :delete_asset3 %> Delete Image3?<br>
    <%= check_box_tag :delete_asset4 %> Delete Image4?<br>
    <%= check_box_tag :delete_asset5 %> Delete Image5?<br>
    <% end %>

  <div class="actions field">
    <%= f.submit %>
  </div>
<% end %>

<br>

<%= tinymce %>